{% extends 'base2.html.twig' %}

{% block title %}Instalaciones{% endblock %}
{% block body %}
    <h1>Instalaciones <span class="badge badge-pill badge-primary">{{ pagination.getTotalItemCount }}</span></h1>
    <form class="form-inline">
        <label for="lot" class="mx-2">Lot</label>
        <input id="lot" type="text" class="form-control-dark form-control " name="lot" value="{{ lot ? lot : ''  }}" />
        <label for="nombre" class="mx-2">Instalacion</label>
        <input id="nombre" type="text" class="form-control-dark form-control " name="nombre" value="{{ nombre ? nombre : ''  }}"/>
        <button class="btn btn-sm btn-primary ml-2"><i class="fas fa-search"></i> Buscar</button><a class="btn btn-sm btn-primary ml-2" href="{{ path('instalaciones_index') }}">Todos</a>
    </form>
    <table class="table table-striped table-dark table-sm">
        <thead>
            <tr>
                <th>Lot</th>
                <th>Entidad</th>
                <th>Instalacion</th>
                <th>Direccion</th>
                <th>Municipio</th>
                {#<th>Acciones</th>#}
            </tr>
        </thead>
        <tbody>
        {% for instalacione in pagination %}
            <tr>
                <td><a href="{{ path('lotjuridicas_show', {'id': instalacione.lot.id }) }}" class="badge badge-pill badge-warning">{{ instalacione.lot }}</a></td>
                <td><a href="{{ path('personasjuridicas_show', {'id':instalacione.lot.identidad.id }) }}" class="badge badge-pill badge-light">{{ instalacione.lot.identidad }}</a></td>
                <td> <a href="{{ path('instalaciones_show', {'id': instalacione.id}) }}" class="badge badge-pill badge-primary"><i class="fas fa-eye"></i>{{ instalacione.nombre }}</a></td>
                <td>{{ instalacione.direccion }}</td>
                <td>{{ instalacione.municipio.municipio }}</td>
                {#<td>{{ instalacione.servAuxCon }}</td>#}
                {#<td>#}
                    {#<a href="{{ path('instalaciones_show', {'id': instalacione.id}) }}" class="badge badge-pill badge-primary"><i class="fas fa-eye"></i>Ver</a>#}
                    {#<a href="{{ path('instalaciones_edit', {'id': instalacione.id}) }}" class="badge badge-pill badge-warning"><i class="fas fa-edit"></i>Editar</a>#}
                {#</td>#}
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No se encontraron Resultados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination, 'utiles/twitter_bootstrap_v4_pagination.html.twig') }}
    </div>
    {#<a href="{{ path('instalaciones_new') }}">Create new</a>#}
{% endblock %}
