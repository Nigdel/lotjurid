<div class="modal fade" id="{{ idmodal }}" tabindex="-1" role="dialog" aria-labelledby="{{ idmodal }}label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content lotmodal-dialog">
            <div class="modal-header">
                <h5 class="modal-title" id="{{ idmodal }}label">{{ idmodaltitle | default('Titulo (set idmodaltitle)') }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" >&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form{{ idmodal }}" method="get" action="{{ path(idmodalpath) }}">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">{{ idmodalcriterio | capitalize }}</label>
                        <input type="text" class="form-control" id="{{ idmodalfieldname }}" name="{{ idmodalfieldname }}">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" onclick="
                        $('#form{{ idmodal }}').submit();
                        ">{{ action | default('Buscar') }}</button>
            </div>
        </div>
    </div>
</div>