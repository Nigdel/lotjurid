{% extends 'lot.html.twig' %}
{% block body %}
    {% import 'comprobante/comptramit.html.twig' as tramite %}
    {#<h1>Comprobantes <span class="badge badge-primary">{{ comprobantes | length }}</span></h1>#}
    <h1>Comprobantes <span class="badge badge-primary">{{ pagination.getTotalItemCount }}</span></h1>

        <form class="form-inline">
        <label for="medio" class="mx-2">Medio</label>
        <input id="medio" type="text" class="form-control-dark form-control " name="medio" value="{{ medio ? medio : ''  }}" />
        <label for="folio" class="mx-2">Folio</label>
        <input id="folio" type="text" class="form-control-dark form-control " name="folio" value="{{ folio ? folio : ''  }}"/>
        <button class="btn btn-sm btn-primary ml-2"><i class="fas fa-search"></i> Buscar</button><a class="btn btn-sm btn-primary ml-2" href="{{ path('comprobante_index') }}">Todos</a>
        </form>

    <table class="table table-striped table-dark table-sm">
        <thead>
            <tr>
                {#<th>{{ knp_pagination_sortable(pagination, 'Id', 'c.id') }}</th>#}
                <th>Medio</th>
                <th>Folio</th>
                <th>Estado</th>
                <th>Femitido</th>
                <th>Duplicado</th>
                <th>Ver/Editar</th>
                <th>Tr√°mites</th>
            </tr>
        </thead>
        <tbody id="comprobantes">
        {% for comprobante in pagination %}
            <tr>
                {{ tramite.showcompFila(comprobante, loop,'true') }}
            </tr>
        {% else %}
            <tr>
                <td colspan="9">No se encontraron resultados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination, 'utiles/twitter_bootstrap_v4_pagination.html.twig') }}
    </div>
    {#<a href="{{ path('comprobante_new') }}">Create new</a>#}
{% endblock %}
