{% extends 'base-.html.twig' %}
{% block title %}Bienvenido al Sistema{% endblock %}
{% block aditionalcss %}<link href="{{ asset('css/signin.css') }}" rel="stylesheet">{% endblock aditionalcss %}
{% block body %}
    {#<h2 class="alert-danger alert"><marquee>!!!!Estamos realizando ajustes al servidor. Disculpen las molestias!!!!</marquee></h2>#}
<div class="container">
    <form method="post" class="form-signin">
        <h1 class="h3 alert alert-dark">Autenticaci&oacute;n</h1>
        {% if error %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Error</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endif %}
        {% if app.user %}
            <div class="mb-3">
                Autenticado como  {{ app.user.username }}, <a href="{{ path('app_logout') }}">Salir</a>
            </div>
        {% endif %}
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        {#Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
        {#See https://symfony.com/doc/current/security/remember_me.html#}

        {#<div class="checkbox mb-3">#}
        {#<label>#}
        {#<input type="checkbox" name="_remember_me"> Remember me#}
        {#</label>#}
        {#</div>#}
        <button class="btn btn-success float-right" type="submit">
            Entrar
        </button>
    </form>
</div>


{% endblock %}
