{{ form_start(form) }}
<div class="form-group">

    {{ form_errors(form) }}

    <div class="row">
        <div class="form-group col">
            {{ form_row(form.password) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            {{ form_row(form.newpassword) }}
        </div>
    </div>
    <div class="d-none">
        {{ form_widget(form) }}
    </div>
    <button class="btn btn-success btn-sm">{{ button_label|default('Guardar') }}</button>
</div>
{{ form_end(form) }}