{% extends 'base2.html.twig' %}
{% block body %}
    <h1>Listado de Usuarios <a class="btn btn-warning" href="{{ path('user_resetpassw') }}">Resetear passw</a></h1>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Email</th>
                <th>Roles</th>
                <th>Municipio</th>
                <th>NivelAcceso</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.municipio }}</td>
                <td>{{ user.nivelAcceso }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('user_show', {'id': user.id}) }}"><i class="fas fa-eye"></i>Ver</a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-warning btn-sm" href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-edit"></i>Editar</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
