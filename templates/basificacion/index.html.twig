{% extends 'base2.html.twig' %}

{% block title %}Basificacion index{% endblock %}

{% block body %}
    <h1>Basificaciones de la Provincia <span class="badge badge-pill badge-primary">{{ pagination.getTotalItemCount }}</span></h1>
    <form class="form-inline">
        <label for="nombre" class="mx-2">Nombre</label>
        <input id="nombre" type="text" class="form-control-dark form-control " name="nombre" value="{{ nombre ? nombre : ''  }}"/>
        <label for="lot" class="mx-2">Lot</label>
        <input id="lot" type="text" class="form-control-dark form-control " name="lot" value="{{ lot ? lot : ''  }}" />
        <button class="btn btn-sm btn-primary ml-2"><i class="fas fa-search"></i> Buscar</button><a class="btn btn-sm btn-primary ml-2" href="{{ path('medios_trans_index') }}">Todos</a>
    </form>
    <table class="table table-striped table-dark table-sm">
        <thead>
            <tr>
                <th>Lot</th>
                <th>Nombre Basif(&Uacute;nico en la Prov)</th>
                <th>Medios</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for basificacion in pagination %}
            <tr>
                <td><a href="{{ path('lotjuridicas_show', {'id': basificacion.idlicencia}) }}"><span class="badge badge-pill badge-warning">{{ basificacion.idlicencia }}</span></a></td>
                <td>{{ basificacion.nombrelb }}</td>
                <td>{{ basificacion.medios | length }}</td>
                <td>
                    <div class="btn-group mr-2">
                        <a href="{{ path('basificacion_show', {'idlbasiam': basificacion.idlbasiam}) }}" class="badge badge-pill badge-primary"><i class="fas fa-eye"></i>Ver</a>
                        <a href="{{ path('basificacion_edit', {'idlbasiam': basificacion.idlbasiam}) }}" class="badge badge-pill badge-warning"><i class="fas fa-edit"></i>Editar</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination, 'utiles/twitter_bootstrap_v4_pagination.html.twig') }}
    </div>
    <a href="{{ path('basificacion_new') }}">Create new</a>
{% endblock %}
