{% extends 'base2.html.twig' %}

{% block title %}Basificacion{% endblock %}

{% block body %}
    {#{% if is_granted("ROLE_ADMIN") %}#}
    {#<h1>Basificacion</h1>#}
    {#<table class="table">#}
        {#<tbody>#}
            {#<tr>#}
                {#<th>Idlbasiam</th>#}
                {#<td>{{ basificacion.idlbasiam }}</td>#}
            {#</tr>#}
            {#<tr>#}
                {#<th>Nombrelb</th>#}
                {#<td>{{ basificacion.nombrelb }}</td>#}
            {#</tr>#}
            {#<tr>#}
                {#<th>Direccion</th>#}
                {#<td>{{ basificacion.direccion }}</td>#}
            {#</tr>#}
        {#</tbody>#}
    {#</table>#}
    {#{% endif %}#}
    <div class="jumbotron p-2">
        <div class="container">
            <h3 class="alert alert-warning"> Base: {{ basificacion.nombrelb }}</h3>
            <p>Registrada por la lot <a class="btn btn-sm btn-primary" href="{{ path('lotjuridicas_show', {'id': basificacion.idlicencia}) }}" >{{ basificacion.idlicencia }}</a></p>
            <p>Direccion:  {{ basificacion.direccion }}  <br></p>
            <div class="row justify-content-between">
                <div class="col-4">
                    <strong class="badge alert-primary">{{ basificacion.idmun }}</strong>
                </div>
                <div class="col-4">
                    <a class="btn btn-warning btn-sm text-dark" title="Mover a otra base" href="{{ path('basificacion_permutar', {'idlbasiam': basificacion.idlbasiam}) }}"><i class="fa fa-bus"></i> Mover Medios a Otra Basificacion</a>
                </div>
            </div>

        </div>

    </div>
    <div class="container">
        <div class="row">
            <div class="col">
                <h6 class="alert alert-success">Medios Basificados <span class="badge badge-pill badge-info">{{ basificacion.medios | length }}</span>
                    {% if app.user.municipio.provinciaid.id == basificacion.idmun.provinciaid.id %}
                    <a href="{{ path('medios_trans_newbyBasif', {'idbasif': basificacion.idlbasiam }) }}" class="badge badge-success badge-pill"><i class="fa fa-plus"></i></a>
                    {% endif %}
                </h6>
                <table class="table table-striped table-dark table-sm">
                    <thead>
                    <tr>
                        <th>Identificacion</th>
                        <th>TipoMedio</th>
                        <th>Rama</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Comprobante</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for medios_tran in basificacion.medios %}
                        <tr>
                            <td>{{ medios_tran.nombre }}</td>
                            <td>{{ medios_tran.tipoMedio }}</td>
                            <td>{{ medios_tran.rama }}</td>
                            <td>{{ medios_tran.marca  }}</td>
                            <td>{{ medios_tran.modelo  }}</td>
                            <td>{{ medios_tran.ComprobanteActivo }}</td>
                            <td>
                                <a href="{{ path('medios_trans_show', {'id': medios_tran.id}) }}" class="badge badge-pill badge-primary"><i class="fas fa-eye"></i>Ver</a>
                                <a href="{{ path('medios_trans_edit', {'id': medios_tran.id}) }}" class="badge badge-pill badge-warning"><i class="fas fa-edit"></i>Editar</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
{% endblock %}
{% block topnavlink %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('basificacion_index') }}"><i class="fa fa-list text-primary"></i> Listar Todas</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ path('basificacion_edit', {'idlbasiam': basificacion.idlbasiam}) }}"><i class="fa fa-edit text-warning"></i> Editar</a>
    </li>
    {% if is_granted('ROLE_ADMIN') %}
    <li class="nav-item">
        {{ include('basificacion/_delete_form.html.twig') }}
    </li>
    {% endif %}
{% endblock %}