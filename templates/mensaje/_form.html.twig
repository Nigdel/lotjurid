{{ form_start(form) }}
<div class="form-group">
    <div class="form-row">
        <div class="form-group col-md-3">
            {{ form_row(form.recibe) }}
        </div>
    </div>
    <div class="form-group">
            {{ form_row(form.asunto) }}
    </div>
    <div class="form-group">
        {{ form_row(form.texto) }}
    </div>
    <div class="d-none">
        {{ form_widget(form) }}
    </div>
    <button class="btn btn-success btn-sm">{{ button_label|default('Enviar') }}</button>
</div>
{{ form_end(form) }}
