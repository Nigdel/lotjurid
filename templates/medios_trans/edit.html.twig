{% endblock %}
{% block jsadicional %}
    <script>
        function updateDictamen() {
            var serv = $('#medios_trans_servicio');
            var tipo= '{{ medios_tran.basificacionObj.idlicencia.idtipo }}';
            var servAmp ='{{ medios_tran.basificacionObj.idlicencia.servicioamparado }}';
            var cad = tipo + ' de ' + servAmp + '. ' + '{{ medios_tran.rama }}';
            $('#medios_trans_servicio').val(cad);
        }
        $(document).ready(function () {
            $('#copserv').click( function () {
                updateDictamen();
            })
            }
        );
    </script>
{% endblock %}