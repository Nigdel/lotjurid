{% extends 'base2.html.twig' %}

{% block title %}MediosTrans index{% endblock %}

{% block body %}
    <h1>Medios de Transporte <span class="badge badge-pill badge-primary">{{ pagination.getTotalItemCount }}</span></h1>
    <form class="form-inline">
        <label for="nombre" class="mx-2">Identificador</label>
        <input id="nombre" type="text" class="form-control-dark form-control " name="nombre" value="{{ nombre ? nombre : ''  }}"/>
        <label for="lot" class="mx-2">Lot</label>
        <input id="lot" type="text" class="form-control-dark form-control " name="lot" value="{{ lot ? lot : ''  }}" />
        <button class="btn btn-sm btn-primary ml-2"><i class="fas fa-search"></i> Buscar</button><a class="btn btn-sm btn-primary ml-2" href="{{ path('medios_trans_index') }}">Todos</a>
    </form>
    <table class="table table-striped table-dark table-sm">
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>{{ knp_pagination_sortable(pagination, 'Identificador', 'm.nombre') }}</th>
                <th>Lot</th>
                <th>TipoMedio</th>
                {#<th>YearFab</th>#}
                {#<th>Cap</th>#}
                {#<th>Umcap</th>#}
                {#<th>Aseguramiento</th>#}
                <th>Marca</th>
                <th>Modelo</th>
                <th>EstadoMedio</th>
                {#<th>ServiciosEspeciales</th>#}
                {#<th>TipoCombustible</th>#}
                {#<th>IndConsumo</th>#}
                {#<th>Potencia</th>#}
                {#<th>TipoPropiedad</th>#}
                <th>Rama</th>
                {#<th>NumRevTecnica</th>#}
                {#<th>VencRevTecnica</th>#}
                {#<th>PaisAbanderamiento</th>#}
                {#<th>IdTipo</th>#}
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for medios_tran in pagination %}
            <tr>
                {#<td>{{ medios_tran.id }}</td>#}
                <td><a href="{{ path('medios_trans_show', {'id': medios_tran.id}) }}" class="badge badge-pill badge-warning">{{ medios_tran.nombre }}</a></td>
                <td><a class="badge badge-pill badge-warning" href="{{ path('lotjuridicas_show', {'id': medios_tran.basificacionObj.idlicencia.id }) }}">{{ medios_tran.basificacionObj.idlicencia }}</a></td>
                <td>{{ medios_tran.tipoMedio }}</td>
                {#<td>{{ medios_tran.yearFab }}</td>#}
                {#<td>{{ medios_tran.cap }}</td>#}
                {#<td>{{ medios_tran.umcap }}</td>#}
                {#<td>{{ medios_tran.aseguramiento ? 'Yes' : 'No' }}</td>#}
                <td>{{ medios_tran.marca }}</td>
                <td>{{ medios_tran.modelo }}</td>
                <td>{{ medios_tran.estadoMedio }}</td>
                {#<td>{{ medios_tran.serviciosEspeciales }}</td>#}
                {#<td>{{ medios_tran.tipoCombustible }}</td>#}
                {#<td>{{ medios_tran.indConsumo }}</td>#}
                {#<td>{{ medios_tran.potencia }}</td>#}
                {#<td>{{ medios_tran.tipoPropiedad }}</td>#}
                <td>{{ medios_tran.rama }}</td>
                {#<td>{{ medios_tran.numRevTecnica }}</td>#}
                {#<td>{{ medios_tran.vencRevTecnica ? medios_tran.vencRevTecnica|date('Y-m-d') : '' }}</td>#}
                {#<td>{{ medios_tran.paisAbanderamiento }}</td>#}
                {#<td>{{ medios_tran.idTipo }}</td>#}
                <td>
                    <a href="{{ path('medios_trans_show', {'id': medios_tran.id}) }}" class="badge badge-pill badge-primary"><i class="fas fa-eye"></i>Ver</a>
                    <a href="{{ path('medios_trans_edit', {'id': medios_tran.id}) }}"  class="badge badge-pill badge-warning"><i class="fas fa-edit"></i>Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="22">no se encontraron medios en la base de datos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination, 'utiles/twitter_bootstrap_v4_pagination.html.twig') }}
    </div>
    {#<a href="{{ path('medios_trans_new') }}">Create new</a>#}
{% endblock %}
