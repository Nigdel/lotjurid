{% extends 'base2.html.twig' %}

{% block title %}Extension index{% endblock %}

{% block body %}
    <h1>Extension index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Extension</th>
                <th>ExtensionAnexo2</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for extension in extensions %}
            <tr>
                <td>{{ extension.id }}</td>
                <td>{{ extension.Extension }}</td>
                <td>{{ extension.ExtensionAnexo2 }}</td>
                <td>
                    <a href="{{ path('extension_show', {'id': extension.id}) }}">show</a>
                    <a href="{{ path('extension_edit', {'id': extension.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('extension_new') }}">Create new</a>
{% endblock %}
