<h2 class="alert alert-primary">Instalaciones <span class="badge badge-warning">{{ instalaciones | length }}</span>
    <a  class="badge badge-pill badge-success {% if lotjuridica.Idestado.id != 5 %}d-none{% endif %}" href="{{ path('instalaciones_newbylot', {'lotjuridicas': lotjuridica.id }) }}"><i class="fa fa-plus"></i></a>
</h2>
<table class="table table-striped table-dark table-sm">
    <tbody>
    <tr>
        <th>Instalacion</th>
        <th>Servicio</th>
    </tr>
    {% for insta in instalaciones %}
        <tr>
            <th ><a class="nav-link" href="{{ path('instalaciones_show', {'id': insta.id }) }}">{{ insta.nombre }}</a></th>
            <td>{{ insta.servAuxCon }}</td>
        </tr>
    {% else %}
        <tr class="{% if lotjuridica.Idestado.id != 5 %}d-none{% endif %}">
            <td colspan="3"><a class="badge badge-pill badge-success" href="{{ path('instalaciones_newbylot', {'lotjuridicas': lotjuridica.id }) }}">Nueva</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>