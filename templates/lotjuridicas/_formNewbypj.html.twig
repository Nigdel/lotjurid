{% use "form_div_layout.html.twig" %}
{{ form_start(form) }}
<div class="form-group">
    {{ form_errors(form) }}
    <div class="form-row">
        <div class="form-group col-md-2">
            {{ form_row(form.id) }}
        </div>
        <div class="form-group col-md-2">
            {{ form_row(form.fechasolicitud) }}
        </div>
        <div class="form-group col-md-2">
            {{ form_row(form.importe) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            {{ form_row(form.idtipo) }}
        </div>
        <div class="form-group col-md-3">
            {{ form_row(form.idservicio) }}
        </div>
        <div class="form-group col-md-3">
            {{ form_row(form.idrama) }}
        </div>
        <div class="form-group col-md-3">
            {{ form_row(form.idextension) }}
        </div>
    </div>
    <div id="limitante">
        {{ form_row(form.limitacion) }}
    </div>

    {{ form_row(form.servicioamparado) }}
    {{ form_row(form.dictamen) }}

    <div class="d-none">
        {{ form_widget(form) }}
    </div>


</div>

    <button class="btn btn-sm btn-success">{{ button_label|default('Solicitar') }}</button>
{{ form_end(form) }}
