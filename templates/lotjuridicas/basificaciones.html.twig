<h2 class="alert alert-light">Basificaciones <span class="badge badge-warning">{{ bases | length }}</span>
    <a class="badge badge-pill badge-success {% if lotjuridica.Idestado.id != 5 %}d-none{% endif %}" href="{{ path('basificacion_newbylot', {'lotjuridicas': lotjuridica.id }) }}"><i class="fa fa-plus"></i></a>
</h2>
<table class="table table-striped table-dark table-sm">
    <tbody>
    <tr>
        <th>Base</th>
        <th>Medios</th>
        <th>Municipio</th>
    </tr>
    {% for base in bases %}
    <tr>
        <th ><a class="nav-link" href="{{ path('basificacion_show', {'idlbasiam': base.idlbasiam }) }}">{{ base.nombrelb }}</a></th>
        <td>{{ base.medios | length }}</td>
        <td>{{ base.idmun.municipio }}</td>
    </tr>
    {% else %}
        <tr class="{% if lotjuridica.Idestado.id != 5 %}d-none{% endif %}">
            <td colspan="3">Ninguna hasta el momento</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
